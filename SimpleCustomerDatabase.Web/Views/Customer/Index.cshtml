@model SimpleCustomerDatabase.Web.Models.CustomerModel

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Customer View";
}

<style>

    tbody:nth-child(odd){
        background-color: #efefef;
    }





</style>

<h2 class="text-center">Simple Customer Database List</h2>

<div>
    <div>
        <div class="panel radius text-center">
            <p>Welcome to the Demo Customer Database</p>
        </div>
    </div>
</div>


<div class="row show-for-medium-up">
    <style>
        .button.tiny{
        padding-top: 0.400rem;
        padding-right: 1.00rem;
        padding-bottom: 0.400rem;
        padding-left: 1.00rem;
        margin: 0;
        }
    </style>
    <table class="columns medium-12 ">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Company</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var customer1 in Model.Customers)
        {
            <tbody>
                <tr>
                    <td>@customer1.FirstName</td>
                    <td>@customer1.LastName</td>
                    <td>@customer1.CompanyName</td>
                    <td>@customer1.PhoneNumber</td>
                    <td>@customer1.Email</td>
                    <td>@Html.ActionLink("Details", "Details", "Customer", new { id = customer1.Id }, new { @class = "tiny radius button" })</td>
                </tr>
            </tbody>
        }
    </table>
    <div class="row">
        <div class="columns medium-12">
            <a href="/Customer/Create" class="radius button expand">Create Customer</a>
        </div>
    </div>
</div>

<div class="show-for-small-only">

    <div>
        
            @foreach (var customer1 in Model.Customers)
            {
                <div class="panel radius">
                    <div class="row">
                        <div class="small-7 column">
                            <h2>@customer1.FirstName @customer1.LastName</h2>
                            <h3>@customer1.CompanyName</h3>
                            <h4>@customer1.PhoneNumber</h4>
                            <h4>@customer1.Email</h4>
                        </div>
                        <div class="small-5 column">
                            <p>
                                @Html.ActionLink("Details", "Details", "Customer", new { id = customer1.Id }, new { @class = "small radius button" })
                            </p>
                        </div>
                    </div>
                </div>
            }

                
    </div>
</div>


